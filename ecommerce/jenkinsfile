pipeline {
  agent any

  parameters {
    booleanParam(name: 'CLEANUP_AFTER', defaultValue: true, description: 'Clean up after job?')
  }

  stages {
     stage('Run') {
            steps {
            sh '''
                  echo "Installing dependencies..."
                  python3 -m venv venv
                  . venv/bin/activate
                  pip3 install -r requirements.txt
                '''
            }
        }

    stage('Clone Repo') {
      steps {
        sh "git clone https://github.com/ashishmishra36/learnings.git"
      }
    }

    stage('Install & Build') {
      steps {
        sh '''
          echo "Running tests..."
          pytest ecommerce/tests --html=reports/report.html
        '''
      }
    }
  }
}
