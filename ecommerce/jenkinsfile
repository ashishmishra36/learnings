pipeline {
  agent any

  parameters {
    booleanParam(name: 'CLEANUP_AFTER', defaultValue: true, description: 'Clean up after job?')
  }

  stages {
    stage('Clone Repo') {
      steps {
        git branch: 'feature_1.0.0.0',
            credentialsId: 'ashishmish36',
            url: 'https://github.com/ashishmishra36/learnings.git'
      }
    }

    stage('Install & Build') {
      steps {
        sh '''
          echo "Installing dependencies..."
          pip install -r requirements.txt

          echo "Running tests..."
          pytest ecommerce/tests --html=reports/report.html
        '''
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'reports/*.html', fingerprint: true

      script {
        if (params.CLEANUP_AFTER) {
          echo 'Cleaning up workspace...'
          cleanWs()
        } else {
          echo 'Skipping cleanup as per parameter.'
        }
      }
    }
  }
}
